package com.mycompany.horrormoviesurvivalcalculator;

import java.util.Scanner;

public class Calculator {
    //Variables to be used in this test
    //These varibales are for the users side of the test and they enter them
    static String userName;
    static String hunterSelection = null;
    static String itemSelection = null;
    static String musicInstrument = null;
    //These variables are for the computers side of the test (the players stats)
    static int knowledge = 0;
    static int resourcefulness = 0;
    static int caution = 0;
    static int fate = 0;
    //These variables are for the computers side of the test (the hunters stats)
    static String hunter = null;
    static int sneak = 0;
    static int cruelty = 0;
    static int intelligence = 0;

    public static void main(String[] args) throws InterruptedException {

        Scanner userInputScanner = new Scanner(System.in);
        //gathering the name
        System.out.println("Welcome to the Horror Movie Survival Test!");
        Thread.sleep(2500);
        System.out.println("To get started, do you mind if we borrow your name?");
        userName = userInputScanner.next();
        //intro
        System.out.println("Well " + userName + " it is a pleasure to meet you!");
        System.out.println("Here is a quick rundown on how this test works");
        System.out.println("You will be using your knowledge, resourcefulness, and awareness to outsmart your hunter.");
        System.out.println("You will have two different scenarios and one similution to answer questions for, but be careful!");
        System.out.println("If you answer enough questions poorly, you may find that your journy ends quicker than expected.");
        System.out.println("Ready? Lets begin!");
        System.out.println("xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx");
        //hunter switch
        System.out.println("Pick your hunter by typing in the proper number:");
        System.out.println("The Alien (1), The Nightmare (2), The Ghostface (3), The Shape (4)");
        hunterSelection = userInputScanner.next();

        switch (hunterSelection) {
            case "1":
                hunter = "The Alien";
                sneak = 6;
                cruelty = 3;
                intelligence = 3;
                System.out.println("The Alien is an extremly sly monster that sneaks up on its victims.");
                System.out.println("Do not try to outmonuver it, try to outsmart it");
                break;
            case "2":
                hunter = "The Nightmare";
                sneak = 4;
                cruelty = 5;
                intelligence = 3;
                System.out.println("The Nightmare is a dream hopping terror that scares its victims at every opprotunity.");
                System.out.println("It is best to outsmart this hunter, the real world tends to be his weakness");
                break;
            case "3":
                hunter = "The Ghostface";
                sneak = 4;
                cruelty = 2;
                intelligence = 6;
                System.out.println("The Ghostface is a highly intelligent human who prowls at night.");
                System.out.println("You probably can not match their cunning plans, so you may have to be extremly scrappy.");
                break;
            case "4":
                hunter = "The Shape";
                sneak = 5;
                cruelty = 3;
                intelligence = 4;
                System.out.println("The Shape is a menace because of thier well rounded knowledge.");
                System.out.println("Once the Shape is after you, ");
                break;
        }
        System.out.println("Best of luck, and I hope to see you at the end.");
        System.out.println("xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx");
        startScenario1();
        if(fate <= 2){
            System.out.println("");
            startScenario2();
            if (fate <= 4){
                System.out.println("");
                startScenario3();
                //story splits based on user selected hunter
                switch (hunter){
                    case "The Alien":
                        startTheAlienHunt();
                        break;
                    case "The Nightmare":
                        startTheNightmareHunt();
                        break;
                    case "The Ghostface":
                        startTheGhostfaceHunt();
                        break;
                    case "The Shape":
                        startTheShapeHunt();
                        break;
                }
                startTheEnd();
            }else{
                System.out.println("Well I have got some good and bad news for you.");
                System.out.println("The good news is that the hunter did not need to catch you!");
                System.out.println("The bad news is that you defenitaly would not survive a horror movie.");
                System.out.println("In the end, it was totally your choices that led to exit stage left.");
                System.out.println("Well " + userName + ", why dont you come back later and try again?");
            }
        }else{
            System.out.println("Well I have got some good and bad news for you.");
            System.out.println("The good news is that the hunter did not need to catch you!");
            System.out.println("The bad news is that you defenitaly would not survive a horror movie.");
            System.out.println("In the end, it was totally your choices that led to exit stage left.");
            System.out.println("Well " + userName + ", why dont you come back later and try again?");
            }
}//ends main

    public static void startScenario1() {
        Scanner userInputScanner = new Scanner(System.in);
        System.out.println("Scenario 1: The Urban Legend");
        //Question 1
        System.out.println("It is a Friday night and your best friend calls you for a favor.");
        System.out.println("They and thier partner want to spend a night out, and ask if you could watch thier two kids");
        System.out.println("being the best friend you are, you agree and head over.");
        System.out.println("Once you get there, you recieve a phone call from an unknown caller.");
        System.out.println("When you pick up, all you can hear is breathing. Each time you hang up they just call again.");
        System.out.println("What do you do?:");
        System.out.println("a) Ignore them. it is probably a bad joke.");
        System.out.println("b) Call your friend, see if it is some kind of silly prank.");
        System.out.println("c) Call the police, it is better safe than sorry.");
        System.out.println("d) Get the kids and yourself to the neighbors, something is wrong");
        String questionOne = userInputScanner.next();
        switch (questionOne) {
            case "a":
                fate = fate + 1;
                System.out.println("After ignoring them for an hour, it seems like they did not catch the hint.");
                System.out.println("The ringing has started scaring the kids, so you decide to call the police");
                break;
            case "b":
                knowledge = knowledge + 1;
                System.out.println("Your friends swears up and down that this is not a joke, and they are now concerned");
                System.out.println("Per your friends request, you call the police");
                break;
            case "c":
                caution = caution + 2;
                System.out.println("At first you are dismissed by the operator as an axious person.");
                System.out.println("However you keep persisting till you reach the contact of the local police station");
                break;
            case "d":
                resourcefulness = resourcefulness + 1;
                System.out.println("After knocking on all the neighbors doors, another family lets you and the kids in.");
                System.out.println("Once you explain your situation, the neighbors convince you to contact the police");
                break;
        }
        //Question 2
        System.out.println("Since the calls are not stopping, and the police agree to help you.");
        System.out.println("They decide to put a trace on your phone, and hope they can find this prankster");
        System.out.println("Unfortunatly, you are told to wait in your friends house");
        System.out.println("Where do you wait in the house?");
        System.out.println("a) The Living Room");
        System.out.println("b) The Kitchen");
        System.out.println("c) The Bedroom");
        System.out.println("d) The Basement");
        String questionTwo = userInputScanner.next();
        switch (questionTwo) {
            case "a":
                caution = caution + 1;
                System.out.println("Smart move. You have plenty of room to move in case of an emergency.");
                break;
            case "b":
                resourcefulness = resourcefulness + 1;
                System.out.println("The utility of this room can not be understanted. You are ready for anything.");
                break;
            case "c":
                fate = fate + 1;
                System.out.println("Interesting choice. At least you can wait in a cozy room to recieve your next instruction");
                break;
            case "d":
                knowledge = knowledge + 1;
                System.out.println("Good call. It will be harder to find you with all the storage containers around.");
                break;
        }
        //Question 3
        System.out.println("The prankster finally calls again, and you are forced to listen to the breathing.");
        System.out.println("Just as you think nothing will happen, you get a call from the police!");
        System.out.println("All you hear from the officer is 'they are in the house'!");
        System.out.println("A loud thump sounds from the floor above you.");
        System.out.println("How do you react?");
        System.out.println("a) Run out of the house!");
        System.out.println("b) Prepare to stand your ground!");
        System.out.println("c) Call your friend to tell them!");
        System.out.println("d) Go on the offensive and find the harasser yourself!");
        String questionThree = userInputScanner.next();
        switch (questionThree) {
            case "a":
                knowledge = knowledge + 1;
                caution = caution + 1;
                System.out.println("Better safe then sorry! Good job on getting out on time, who knows what crazy person was there");
                break;
            case "b":
                resourcefulness = resourcefulness + 1;
                System.out.println("With your knwoledge, you feel confident you can defend yourself.");
                break;
            case "c":
                fate = fate + 1;
                System.out.println("You have to let them know some kind of psycho was in their house! Hopefully they don't catch you...");
                break;
            case "d":
                fate = fate + 1;
                System.out.println("How hard can it be to take down one other person? Hopefully you can make it back in one piece");
                break;
        }
        //ending of Scenario 1
        System.out.println("Scenario 1 is now over. Here is what we have gathered:");
        System.out.println("From that scenario, you have " + knowledge + " points in knowledge.");
        System.out.println("You also have " + resourcefulness + " resourcefulness points.");
        System.out.println("Finally, you now have " + caution + " points with caution");
    }//end of Scenario 1
    public static void startScenario2() {
        Scanner userInputScanner = new Scanner(System.in);
        System.out.println("Scenario 2: The Chain Letter");
        //question 4
        System.out.println("Your friend has been telling you about this supposidly haunted tape for the past few days.");
        System.out.println("It is suppose to flash a series of creepy images, then a unknown number will call you and whisper '7 days'");
        System.out.println("He doesn't know what that means, but he invites you over to watch the tape with him.");
        System.out.println("What do you do?");
        System.out.println("a) Accept, I do not believe in haunted tapes.");
        System.out.println("b) Accept, what is the worst that can happen?");
        System.out.println("c) Reject, I do not want to mess with that haunted stuff");
        System.out.println("d) Reject, I have other plans");
        String questionFour = userInputScanner.next();
        switch (questionFour) {
            case "a":
                fate = fate + 1;
                System.out.println("Your Friends is overjoyed!");
                System.out.println("They can not wait to see you.");
                break;
            case "b":
                fate = fate + 1;
                System.out.println("Your Friend is very excited!");
                System.out.println("They can not wait to watch the tape with you.");
                break;
            case "c":
                knowledge = knowledge + 1;
                caution = caution + 1;
                System.out.println("Feeling slight unnerved, you start to relax when there is a knock on the door!");
                System.out.println("It is your friend! They came with the tape, and now you have no choice but to invite them in!");
                break;
            case "d":
                resourcefulness = resourcefulness + 1;
                caution = caution + 1;
                System.out.println("Your Friends appears sympathetic, however an hour after you rejct, there is a knock on the door.");
                System.out.println("It is your friend! They came with the tape, and now you have no choice but to invite them in.");
                break;
        }
        //question 5
        System.out.println("You and your frined settle in to watch the tape.");
        System.out.println("The tape is very strange, but nothing special.");
        System.out.println("However when it ends, both your friend and your phones start ringing.");
        System.out.println("Looking, it is from an unknown caller!");
        System.out.println("What do you do?");
        System.out.println("a) Answer it!");
        System.out.println("b) Decline it!");
        System.out.println("c) Ignore it!");
        System.out.println("d) Ditch the phone!");
        String questionFive = userInputScanner.next();
        switch (questionFive) {
            case "a":
                fate = fate + 1;
                System.out.println("You answer the phone, and a young child whispers '7 days'.");
                break;
            case "b":
                fate = fate + 1;
                caution = caution + 1;
                System.out.println("It does not seem to matter how much you decline it, they just keep calling.");
                System.out.println("so you accept your fate.");
                System.out.println("You answer the phone, and a young child whispers '7 days'.");
                break;
            case "c":
                fate = fate + 1;
                resourcefulness = resourcefulness + 1;
                System.out.println("It does not seem to matter how much you ignore it, they just keep calling.");
                System.out.println("so you accept your fate.");
                System.out.println("You answer the phone, and a young child whispers '7 days'.");
                break;

            case "d":
                fate = fate + 1;
                knowledge = knowledge + 1;
                System.out.println("Looking at your friends face, you know it was bad.");
                System.out.println("They look at you and tell you that the voice said '7 days'!");
                break;
        }
        //question 6
        System.out.println("Now that you know it was not a rumor, it is impossible to deny that something bad happens in 7 days.");
        System.out.println("What do you plan to do for the next 7 days?");
        System.out.println("a) Buisness as usual");
        System.out.println("b) Investigate the origions of the tape");
        System.out.println("c) Prepare to fight in 7 days");
        System.out.println("d) Contact the last person to watch the tape, and see what they say");
        String questionSix = userInputScanner.next();
        switch (questionSix) {
            case "a":
                fate = fate + 2;
                System.out.println("Unfortuanly this was not the wisest choice.");
                System.out.println("7 days later, your learned the truth about the tape the hard way");
                break;
            case "b":
                knowledge = knowledge + 2;
                System.out.println("Learning everything you could about the mystery behind the tape, you learn of a rule loop hole.");
                System.out.println("You were able to save yourself, but your friend was not as lucky");
                break;
            case "c":
                caution = caution + 2;
                System.out.println("Preparing for the horrors surrounding the tape, you were able to ");
                System.out.println("Unfortunetly you could not fight back the evil from the tape.");
                break;
            case "d":
                resourcefulness = resourcefulness + 2;
                System.out.println("Learning everything you could about the mystery behind the tape, you learn of a rule loop hole.");
                System.out.println("You were able to save not only yourself, but your friend as well!");
                break;
        }
        //ending of scenario 2
        System.out.println("Scenario 2 is now over. Here is what we have gathered:");
        System.out.println("From that scenario, you have " + knowledge + " points in knowledge.");
        System.out.println("You also have " + resourcefulness + " resourcefulness points.");
        System.out.println("Finally, you now have " + caution + " points with caution");
        if (fate > 4) {
            System.out.println("Well I have got some good and bad news for you.");
            System.out.println("The good news is that the hunter did not need to catch you!");
            System.out.println("The bad news is that you defenitaly would not survive a horror movie.");
            System.out.println("In the end, it was totally your choices that led to exit stage left.");
            System.out.println("Well " + userName + ", why dont you come back later and try again?");
        } else {
            System.out.println("You are done with the scenarios and you are ready for the next step!");
            System.out.println("Now it is time to face your hunter.");
            System.out.println("Take your time, and be careful!");
        }
    }
    public static void startScenario3(){
        Scanner userInputScanner = new Scanner(System.in);
        System.out.println("Simulation: The Cabin in the Woods");
        System.out.println("Four of your friends and you decide to take a weekend to get away.");
        System.out.println("You find a rustic cabin on Airbnb for super cheap.");
        System.out.println("After contacting the owner, she warns you that cell service gets spotty there.");
        System.out.println("What item do you make sure ot bring?");
        System.out.println("a) A Portable Charger.");
        System.out.println("b) A pocket Multi-tool.");
        System.out.println("c) A musical intrument.");
        System.out.println("d) A Flashlight");
        String questionSeven = userInputScanner.next();
        switch (questionSeven) {
            case "a":
                resourcefulness = resourcefulness + 1;
                itemSelection = "Portable Charger";
                System.out.println("Just because cell service doesn't work right doesnt mean having a charged phone is a bad idea!");
                break;
            case "b":
                caution = caution + 1;
                itemSelection = "Multi-tool";
                System.out.println("There is an old slogan that goes 'be prepared!'");
                break;
            case "c":
                fate = fate + 1;
                itemSelection = "Instrument";
                System.out.println("You must be talented! What instrument do you play?");
                musicInstrument = userInputScanner.next();
                System.out.println("Awesome! Hopefully your " + musicInstrument + "keeps everyone in good spirits!");
                break;
            case "d":
                knowledge = knowledge + 1;
                itemSelection = "Flashlight";
                System.out.println("Since we do not have night vision, this seems like a smart pick!");
                break;
        }
        //question 8
        System.out.println("Driving with your friends, you arrive to the cabin in the woods around noon.");
        System.out.println("Seeminly perfect, what is the first activity you do?");
        System.out.println("a) Take a nap");
        System.out.println("b) Go for a solo hike");
        System.out.println("c) Play some games with your friends");
        System.out.println("d) Help prepare the fire for the night");
        String questionEight = userInputScanner.next();
        switch (questionEight) {
            case "a":
                caution = caution + 1;
                System.out.println("The nap felt great! You feel energized for the rest of the night at the campfire");
                break;
            case "b":
                fate = fate + 1;
                System.out.println("When you are out of sight of the cabin, you find a tent that looks like someone has lived in it");
                System.out.println("You decide to go warn the others, however they are already having fun at the campfire");
                break;
            case "c":
                knowledge = knowledge + 1;
                System.out.println("Spending quality time with your friends is what you needed to relax!");
                System.out.println("in fact, they teach you how to play spiderball! Could be a useful skill for the next trip.");
                break;
            case "d":
                resourcefulness = resourcefulness + 1;
                System.out.println("Picking out sticks and chopping logs seems boring, but passing the time with the others was a blast!");
                System.out.println("Once night rolls around, you enjoy relaxing by the fire");
                break;
        }
        //question 9
        System.out.println("After spending the day with your friends, you decide to head back to your room.");
        if (itemSelection == "Portable Charger") {
            System.out.println("When you enter the room, you notice that you have a small cell phone signal.");
            System.out.println("Since you have plenty of power in the charger, it could be fun to kill a few hours.");
            System.out.println("What do you do?");
            System.out.println("a) Go right to sleep.");
            System.out.println("b) Watch some movies before bed");
            System.out.println("c) Read the news");
            System.out.println("d) Message some friends");
            String questionNine = userInputScanner.next();
            switch (questionNine) {
                case "a":
                    fate = fate + 2;
                    itemSelection = null;
                    System.out.println("After drifting to sleep, you are startled awake from a sound in the room!");
                    System.out.println("Looking for your phone, you realize that it is missing!");
                    System.out.println("By using the small amount of light from the moon, decide to look around the room.");
                    break;
                case "b":
                    resourcefulness = resourcefulness + 1;
                    System.out.println("You decide to watch a relaxing documentary when you hear a noise from the room!");
                    System.out.println("You stand up so fast you drop you phone and it shatters.");
                    if (fate >= 3) {
                        itemSelection = null;
                        System.out.println("The phone is now unusable.");
                        System.out.println("Hopefully it was not necessary");
                    } else {
                        System.out.println("Luckily it is just a little broken");
                        System.out.println("It might be best to save this incase of an emergency");
                    }
                    System.out.println("By using the small amount of light from the moon, decide to look around the room.");
                    break;
                case "c":
                    knowledge = knowledge + 1;
                    System.out.println("Staying up to date with the world is important!");
                    System.out.println("As you are reading the latest about entertainment, there is a loud thump in the room!");
                    System.out.println("Using the screen as a light source you look around the room.");
                    break;
                case "d":
                    caution = caution + 1;
                    System.out.println("As you are messaging your best friend, you hear a loud noise from the conor of the room!");
                    System.out.println("Using the screen as a light source you look around the room.");
                    break;
            }
        } else if (itemSelection == "Multi-tool") {
            System.out.println("When you head back to your room, you find that your door was cracked open slightly");
            System.out.println("There is sounds of something rummaging in the room.");
            System.out.println("Since you brought this Multi-tool, you have a few ways to approach this situation");
            System.out.println("What do you do?");
            System.out.println("a) Prepare the tool as a weapon, and go into the room");
            System.out.println("b) Use the tool to bang the door, hopefully to scare whatever is in the room!");
            System.out.println("c) Run the other way!");
            System.out.println("d) Use the small flashlight on it to peer into the room");
            String questionNine = userInputScanner.next();
            switch (questionNine) {
                case "a":
                    fate = fate + 1;
                    System.out.println("As you run into the room, something jumps out and shatters the window!");
                    System.out.println("Nothing seems to be missing, however you decide to use the multi-tools flashlight to look around the room");
                    break;
                case "b":
                    knowledge = knowledge + 1;
                    System.out.println("As you bang the door, you hear glass shattering!");
                    System.out.println("When you carefully walk into the room, you see something jumped out the now broken window");
                    System.out.println("Nothing seems to be missing, however you decide to use the multi-tools flashlight to look around the room");
                    break;
                case "c":
                    caution = caution + 1;
                    resourcefulness = resourcefulness + 2;
                    System.out.println("After you run to the otherside of the cabin, your friends come to your side!");
                    System.out.println("Gathering the courage as a group, you all decide to investiagte what was in the room");
                    System.out.println("Armed with flashlights, you and your friends break up into groups and start to look around the room");
                    break;
                case "d":
                    resourcefulness = resourcefulness + 1;
                    System.out.println("Nothing seems to be missing.");
                    System.out.println("You decide to use the multi-tools flashlight to look around the room");
                    break;
            }
        } else if (itemSelection == "flashlight") {
            System.out.println("Luckily walking around in the dark was no problem.");
            System.out.println("When you get back to your room, you notice that the window is broken!");
            System.out.println("What do you do?");
            System.out.println("a) investigate the room with the flashlight");
            System.out.println("b) call for your friends");
            System.out.println("c) run the other way!");
            System.out.println("d) investigate the room without the flashlight");
            String questionNine = userInputScanner.next();
            switch (questionNine) {
                case "a":
                    fate = fate + 1;
                    System.out.println("As you enter the room you hear a shattering noise!");
                    System.out.println("Once you are in the room, it looks like the window is now broken");
                    System.out.println("Scared, you decide to carefully look around the room");
                    break;
                case "b":
                    resourcefulness = resourcefulness + 1;
                    System.out.println("As you shout your friends names you hear a shattering sound from your room!");
                    System.out.println("When you enter the room, you see the glittering of glass on the floor");
                    System.out.println("You join your friends and decide to split up to see if you can find the intruder");
                    break;
                case "c":
                    caution = caution + 1;
                    System.out.println("As you run the other way you hear your friends yelling for you!");
                    System.out.println("Carefully going back to your room, you notice that your friends are in your room");
                    System.out.println("They point out the now shattered window and you all decide to split up to look for the intruder");
                    break;
                case "d":
                    knowledge = knowledge + 1;
                    System.out.println("You carefully open the door to the room, only to be starteled by glass shattering!");
                    System.out.println("You now see the window is broken!");
                    System.out.println("The room looks ok, but you decide to look around some more");
                    break;
            }
        } else if (itemSelection == "Instrument") {
            System.out.println("you are starting to feel a little tired, and two of your friends have retired to bed.");
            System.out.println("What do you do?");
            System.out.println("a) stay up a little longer");
            System.out.println("b) head back to your room and go to sleep");
            System.out.println("c) play some more songs for your friends with your " + musicInstrument);
            System.out.println("d) head back to your room and tune your " + musicInstrument);
            String questionNine = userInputScanner.next();
            switch (questionNine) {
                case "a":
                    fate = fate + 1;
                    resourcefulness = resourcefulness + 2;
                    System.out.println("You hear glass shattering from the side of the cabin!");
                    System.out.println("Joined by your two friends you run to the location of the sound");
                    System.out.println("it looks like the window to your room has blown out!");
                    System.out.println("You and your friends decide to investiagte the area around the cabin to find the source of the sound");
                    break;
                case "b":
                    caution = caution + 1;
                    System.out.println("As you walk back to your room, you hear a shattering sound!");
                    System.out.println("As you rush in, you see that the window is now broken.");
                    System.out.println("You decide to look around to see what may have broken it");
                    break;
                case "c":
                    resourcefulness = resourcefulness + 1;
                    System.out.println("As you are about to get to the refrain in the song, you hear glass shattering!");
                    System.out.println("You and your friends rush into the cabin to only find that the window in your room is now broken");
                    System.out.println("Deciding to split up, you start to look for what may have broken the window");
                    break;
                case "d":
                    fate = fate + 1;
