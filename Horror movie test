    public static void startTheEnd(){
    Scanner userInputScanner = new Scanner(System.in);
                System.out.println("XXXX...End of simulation...XXXX");
                System.out.println("Well that was intense, wasn't it?");
                System.out.println("However it is now all over " + userName + "!");
                System.out.println("Let's look at how you did throught this test!");

                //final compairson
                System.out.println("During this simulation, you faced  " + hunter + ".");
                System.out.println("This hunter is a tough one!");
                System.out.println("Let's take a look at your final standings, shall we?");
                System.out.println("From this test, you have " + knowledge + " points in knwoledge.");
                System.out.println("You also have " + resourcefulness + " resourcefulness points.");
                System.out.println("Finally, you now have " + caution + " points with caution");
                System.out.println("Now, let us see if you were able to make it out alive.");
                if (fate >= 5) {
                    System.out.println("I am sorry, but it seems like you were not able to make it.");
                    System.out.println("Your choices made throughout the test show that the hunter may not have had to get you");
                } else if (knowledge <= intelligence) {
                    System.out.print("I am sorry, but it does not look like you were able to make it.");
                    System.out.println("It looks like, in the end, the hunter would have out smarted you");
                } else if (resourcefulness <= cruelty) {
                    System.out.println("I am sorry, but it does not look like you were able to make it.");
                    System.out.println("This hunter was exceptionally cunning, and your scrappy nature failed you");

                } else if (caution <= sneak) {
                    System.out.println("I am sorry, but it does not look like you were able to make it.");
                    System.out.println("This hunter was very sneaky, and you were not cautious enought to see them.");
                } else {
                    System.out.println("Congragulations " + userName + "! You were able to beat the hunter at their own game!");
                }
                System.out.println("Thank you for playing! I hope you had a good time :)");
        }
